@using BusinessLogic.ViewModels.UserModels;


<div class="user-card">
    <article class="user-card__index">
        @(Index + 1)
    </article>
    <div class="user-card__name">
        @User.Name
    </div>
    <div class="user-card__todos-count">
        @User.TodoCount
    </div>
    <LoadingButton Text="Удалить"
                   Callback="@Click"
                   Show="@Deleting"
                   Style="@Themes.DangerHover" />

</div>



@code {
    #region Params
    [Parameter]
    public int Index { get; set; }
    [Parameter]
    public UserListResult User { get; set; }
    [Parameter]
    public EventCallback<int> Callback { get; set; }
    [Parameter]
    public bool Deleting { get; set; }
    #endregion

    private void Click()
    {
        Callback.InvokeAsync(User.Id);
    }


